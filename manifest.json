{
  "manifest_version": 2,
  "name": "Messenger transcription",
  "version": "2.0.0",

  "description": "Messenger voice messages transcription.",
  "homepage_url": "https://github.com/Zeraye/facebook-speech-recognition",
  "icons": {
    "512": "icons/icon-512.png"
  },

  "permissions": [
    "storage",
    "*://www.facebook.com/messages/*",
    "*://*.ngrok.io/*",
    "https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css",
    "https://messenger-transcription-api.vercel.app/api"
  ],

  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/messages/t/*"],
      "js": ["scripts/updateMessenger.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Messenger transcription settings",
    "default_popup": "popup/popup.html"
  }
}
